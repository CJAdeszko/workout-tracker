<div class='flex-wrap w-full'> 
  <p style="color: green"><%= notice %></p>

  <% content_for :title, "Workouts" %>

  <div class="flex justify-between items-center mb-5">
    <h1 class="text-3xl">Workouts</h1>
    <%= link_to "New workout", new_workout_path, class: "bg-slate-600 text-white p-3 rounded-lg"%>
  </div>

  <div id="workouts" class="">
    <div class="flex flex-row">
      <div class="basis-1/3 md:basis-1/8">
        <strong>Date</strong>
      </div>
      <div class="basis-2/3 md:basis-7/8">
        <strong>Name</strong>
      </div>
    </div>

    <% @workouts.each do |workout| %>
      <%= render workout %>
    <% end %>
  </div>
</div>
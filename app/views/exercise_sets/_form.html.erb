<%= form_with(model: exercise_set) do |form| %>
  <% if exercise_set.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(exercise_set.errors.count, "error") %> prohibited this exercise_set from being saved:</h2>

      <ul>
        <% exercise_set.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :reps, style: "display: block" %>
    <%= form.number_field :reps %>
  </div>

  <div>
    <%= form.label :perceived_exertion, style: "display: block" %>
    <%= form.text_field :perceived_exertion %>
  </div>

  <div>
    <%= form.label :exercise_id, style: "display: block" %>
    <%= form.select :exercise_id, options_from_collection_for_select(@exercises, :id, :name), include_blank: '-- Select an Exercise --' %>
  </div>

  <div>
    <%= form.label :workout_id, style: "display: block" %>
    <%= form.text_field :workout_id %>
  </div>

  <div>
    <%= form.label :note, style: "display: block" %>
    <%= form.text_area :note %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
